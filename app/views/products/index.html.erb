
<body id="pageall">
<div class="container-product">
        <div class="row" id="fila" >
         
            <% @products.each do |product| %>
            <div class="col-md-4 col-xs-6 col-xs-12 propic" >
                    <%= image_tag(product.image_url, class: 'img-responsive, img-thumbnail ') %>
                
                    <div class="wrapper">
                        <h2 class="products-caption">
                          <a href="#">
                            <% if user_signed_in? %>
                              <%= link_to product.name, product %>
                            <% else %>
                              <%= link_to product.name, new_user_session_path %>
                            <% end %>
                           </a>
                        </h2>  
                    </div>
                
            </div>
            <% end %>
        
        </div>
</div>  

</body>


   